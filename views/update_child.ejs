<%- include('partials/loggedin'); -%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">

<div class="container" style="margin-top: 10vmin;">	
  <% if(child){ %>
<form style="padding: 100px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);font-family: 'Varela Round', sans-serif;" method="POST" action="/doctor/update/<%= child.id %>">
	<h1 style="font-family: 'Dancing Script', cursive;">Update Child Details</h1><hr>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name"><img src="/images/name.png" width="4%">&nbsp;Name</label>
      <input type="text" class="form-control" name="name" id="name" value="<%= child.name %>" placeholder="Enter Child Name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="email"><img src="/images/email.png" width="4%">&nbsp;Email</label>
      <input type="Email" class="form-control" name="email" id="email" value="<%= child.email %>" placeholder="Enter Email ID" required>
    </div>
  </div><br>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="mobile"><img src="/images/call.png" width="4%">&nbsp;Contact No</label>
      <input type="number" class="form-control" id="mobile" placeholder="Enter Contact Number" name="mobile" value="<%= child.mobile %>" required>
    </div>

    <div class="form-group col-md-6">
        <label for="fatherName"><img src="/images/hospitalicon.png" width="4%">&nbsp;Father's Name</label>
        <input type="FathersName" class="form-control" id="fatherName" placeholder="Enter Fathers Name" name="fatherName" value="<%= child.fatherName %>" required>
    </div>

  </div><br>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="nextSchedule"><img src="/images/date.png" width="4%">&nbsp;Next Schedule</label>
      <input type="Date" class="form-control" name="nextSchedule" value="<%= child.nextSchedule %>" id="nextSchedule" placeholder="Enter Next Schedule" required>
    </div>
    <div class="form-group col-md-6">
      <label class="mr-sm-2" for="nextVaccine"><img src="/images/hospitalicon.png" width="5%">&nbsp;Next Vaccine</label>
        <select class="custom-select mr-sm-2" id="nextVaccine" name="nextVaccine" value="<%= child.nextVaccine %>">
          <option selected disabled>Choose...</option>
          <% for(v of all_vaccines){ %>
          <option value="<%= v.name %>"><%= v.name %></option>
          <% }  %>
        </select>
    </div>
  </div><br>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="history"><img src="/images/des.png" width="5%">&nbsp;History</label>
      <input type="History" class="form-control" name="history" value="<%= child.history %>" id="history" placeholder="Enter History if any" >
    </div>
  </div><br>



<br>
  <div class="row d-flex justify-content-between">
  	<div class="col-md-8">
  		<button type="submit" class="btn btn-primary" style="width: 40%">Register</button>
  	</div>
  	<div class="col-md-4">
  		<br><img src="/images/hospitalregistration.png" class="img-fluid">
  	</div>
  	
  </div>
</form>
<% }  %>
</div>

<script type="text/javascript" src="js/end.js"></script>
<%- include('partials/footer'); -%>