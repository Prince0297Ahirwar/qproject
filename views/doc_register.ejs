<%- include('partials/header'); -%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">

<div class="container" style="margin-top: 10vmin;">
	
<form style="padding: 100px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);font-family: 'Varela Round', sans-serif;" method="POST"  action="/doctor/create" >
  <h1 style="font-family: 'Dancing Script', cursive;">Register for Doctor</h1><hr>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name"><img src="images/name.png" width="4%">&nbsp;Name</label>
      <input type="text" class="form-control" name="name" id="inputName" placeholder="Enter Name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="email"><img src="images/email.png" width="4%">&nbsp;Email</label>
      <input type="Email" class="form-control" name="email" id="inputEmail" placeholder="Enter Email ID" required>
    </div>
  </div><br>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="mobile"><img src="images/call.png" width="4%">&nbsp;Conatct No.</label>
      <input type="number" class="form-control" name="mobile" id="inputContact" placeholder="Enter Contact Number" required>
    </div>
    <div class="form-group col-md-6">
    <div class="col-auto">
      <label class="mr-sm-2" for="hospitaltype"><img src="images/hospitalicon.png" width="5%">&nbsp;Hospital Type</label>
      <select class="custom-select mr-sm-2" id="inputhospitaltype" name="hospital">
        <option selected disabled>Choose...</option>
        <option value="Government">Government</option>
        <option value="Private">Private</option>
      </select>
    </div>
  </div>
</div><br>

<div class="form-row">
  <div class="form-group col-md-6">
    <label for="inputPIN"><img src="images/pin.png" width="4%">&nbsp;Unique Id</label>
    <input type="text" class="form-control" name="uniqueId" id="inputUniqueID" placeholder="Enter Unique Id" required>
  </div>
  <div class="form-group col-md-6">
    <label for="inputDescription"><img src="images/des.png" width="4%">&nbsp;Description</label>
    <input type="text" class="form-control" name="description" id="inputDescription" placeholder="Enter Description" required>
  </div>
</div><br>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="pwd"><img src="images/password.png" width="4%">&nbsp;Password</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="password" required>
    </div>
    <div class="form-group col-md-6">
      <label for="repwd"><img src="images/password.png" width="4%">&nbsp;Retype Password</label>
      <input type="password" class="form-control" id="repwd" placeholder="Retype Password" name="repassword" required>
    </div>
  </div><br>


  
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <label class="form-check-label" for="gridCheck">
       The Doctor acknowledges Government RNR and gives the assurance that it is is registered Under MTP Act 1997.
      </label>
    </div>
  </div>

<br>
  <div class="row d-flex justify-content-between">
  	<div class="col-md-8">
  		<button type="submit" class="btn btn-primary" style="width: 40%">Register</button>
  	</div>
  	<div class="col-md-4">
  		<br><img src="images/hospitalregistration.png" class="img-fluid">
  	</div>
  	
  </div>
</form>

</div>
<script type="text/javascript" src="js/end.js"></script>
<%- include('partials/footer'); -%>